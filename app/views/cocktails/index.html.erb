<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/cocktails.jpg');">
  <div class="banner-content">
    <h1>Cocktails...</h1>
    <p>Get wasted with class</p>
    <%= link_to 'Create my poison', new_cocktail_path, { :class=>"btn btn-primary btn-lg" } %>
    <!-- <a class="btn btn-primary btn-lg">Create my poison</a> -->
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="container text-center padded features">
  <div class="col-xs-12 col-sm-6 col-md-3">
    <img src="images/globe.png" alt="">
      <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
<br>

<%= link_to 'Create my poison', new_cocktail_path %>
